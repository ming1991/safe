<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
     >
    <ImageView
        android:id="@+id/item_view_location_style_dialog_iv_bg" 
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/location_style_bg0"
        android:layout_marginRight="5dp"
        />
    <TextView 
        android:id="@+id/item_view_location_style_dialog_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="半透明"
        android:textSize="18sp"
        android:layout_toRightOf="@id/item_view_location_style_dialog_iv_bg"
        android:layout_centerVertical="true"
        />
    <ImageView
        android:id="@+id/item_view_location_style_dialog_iv_selected" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_selected"
        />

</RelativeLayout>
