<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <TextView 
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="密码验证"
        android:drawableLeft="@drawable/dialog_title_default_icon"
        />
    <EditText 
        android:password="true"
        android:id="@+id/et_submit_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        />
    
    
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >
        <Button 
            android:textColor="@color/left_but_text_selector"
            android:background="@drawable/left_but_selector"
            android:id="@+id/bt_confirm_ok"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="确定"
            />
        <Button 
            android:background="@drawable/right_but_selector"
            android:id="@+id/bt_confirm_cancle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="取消"
            />
    </LinearLayout>

</LinearLayout>
