<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >

    <TextView
        android:layout_marginBottom="5dp"
        style="@style/SubTitleStyle"
        android:text="4.激活设备管理员" />
    <TextView 
        style="@style/SubTitle_desc"
        android:text="激活设备管理员:\n如果手机丢失,可以远程锁屏,远程\n擦除数据"
        />
     <RelativeLayout
         android:id="@+id/act_anti_theft_setup4_rl_activate"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/left_but_selector"
        >
        <ImageView
             android:id="@+id/act_anti_theft_setup4_iv_icon" 
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/admin_inactivated"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="点击激活/取消激活设备管理员"
            android:textColor="@color/left_but_text_selector"
            android:textSize="18sp" />

    </RelativeLayout>

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent" >

         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"
             android:background="@drawable/step_4" />

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentBottom="true"
             android:layout_marginBottom="10dp"
             android:gravity="center_horizontal" >

             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="@android:drawable/presence_invisible" />

             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="@android:drawable/presence_invisible" />
             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="@android:drawable/presence_invisible" />
             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="@android:drawable/presence_online" />

             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="@android:drawable/presence_invisible" />
         </LinearLayout>

         <Button
             style="@style/Btn_pre"
             android:onClick="pre_page" />

         <Button
             style="@style/Btn_next"
             android:onClick="next_page" />
     </RelativeLayout>

</LinearLayout>
