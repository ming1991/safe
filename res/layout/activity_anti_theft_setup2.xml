<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >

    <TextView
        android:layout_marginBottom="5dp"
        style="@style/SubTitleStyle"
        android:text="2.手机卡绑定" />
    <TextView 
        style="@style/SubTitle_desc"
        android:text="通过绑定SIM卡:\n下次重启手机如果发现SIM卡变化,就\n会发送报警短信"
        />
    <RelativeLayout
        android:id="@+id/act_anti_theft_setup2_rl"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/left_but_selector"
        >
        <ImageView 
            android:id="@+id/act_anti_theft_setup2_iv"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/unlock"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="点击绑定/解绑SIM卡"
            android:textColor="@color/left_but_text_selector"
            android:textSize="18sp" />

    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView 
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/step_2"
            />
	<LinearLayout 
	    android:layout_marginBottom="10dp"
	    android:layout_alignParentBottom="true"
	    android:gravity="center_horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	   
	    <ImageView 
	        android:background="@android:drawable/presence_invisible"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
	     <ImageView 
	        android:background="@android:drawable/presence_online"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
	    <ImageView 
	        android:background="@android:drawable/presence_invisible"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
	    <ImageView 
	        android:background="@android:drawable/presence_invisible"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
	    <ImageView 
	        android:background="@android:drawable/presence_invisible"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
	</LinearLayout>
	<Button 
	    style="@style/Btn_pre"
	    android:onClick="pre_page"
	    />
	<Button 
	    style="@style/Btn_next"
	    android:onClick="next_page"
	    />
        
    </RelativeLayout>
</LinearLayout>
